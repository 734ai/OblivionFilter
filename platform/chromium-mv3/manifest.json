{
  "author": "Muzan Sano & contributors",
  "manifest_version": 3,
  "name": "OblivionFilter",
  "version": "1.0.0",
  "description": "Advanced privacy-respecting content blocker with stealth and censorship resistance capabilities",
  
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  
  "action": {
    "default_icon": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png",
      "64": "img/icon_64.png",
      "128": "img/icon_128.png"
    },
    "default_title": "OblivionFilter",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/js/vapi.js",
        "/js/vapi-client.js",
        "/js/stealth/dom-cloaking.js",
        "/js/stealth/signature-obfuscation.js",
        "/js/stealth/traffic-randomization.js",
        "/js/stealth/behavioral-mimicry.js",
        "/js/contentscript.js"
      ],
      "css": [
        "/css/contentscript.css"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "privacy",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "scripting",
    "offscreen"
  ],
  
  "optional_permissions": [
    "nativeMessaging"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "/web_accessible_resources/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  },
  
  "minimum_chrome_version": "110",
  
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "64": "img/icon_64.png",
    "96": "img/icon_96.png",
    "128": "img/icon_128.png"
  },
  
  "commands": {
    "launch-element-zapper": {
      "description": "Element zapper"
    },
    "launch-element-picker": {
      "description": "Element picker"
    },
    "launch-logger": {
      "description": "Open logger"
    },
    "open-dashboard": {
      "description": "Open dashboard"
    },
    "relax-blocking-mode": {
      "description": "Relax blocking mode"
    },
    "toggle-cosmetic-filtering": {
      "description": "Toggle cosmetic filtering"
    },
    "toggle-javascript": {
      "description": "Toggle JavaScript"
    }
  },
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "default",
        "enabled": true,
        "path": "rulesets/default.json"
      },
      {
        "id": "stealth",
        "enabled": false,
        "path": "rulesets/stealth.json"
      }
    ]
  },
  
  "homepage_url": "https://github.com/OblivionFilter/OblivionFilter"
}
